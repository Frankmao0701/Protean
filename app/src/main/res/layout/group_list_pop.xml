    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@mipmap/detail_pop_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/home"
            android:drawableLeft="@mipmap/icon_pop_home"
            android:textSize="10dp"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textColor="#77ffffff"
            android:text="首页"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/search"
            android:drawableLeft="@mipmap/icon_pop_search"
            android:textSize="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:textColor="#77ffffff"
            android:text="搜索"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_pop_share"
            android:id="@+id/share"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="10dp"
            android:textColor="#77ffffff"
            android:text="分享"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:drawableLeft="@mipmap/icon_pop_info"
            android:id="@+id/info"
            android:textSize="10dp"
            android:textColor="#77ffffff"
            android:text="信息"/>
    </LinearLayout>

    <!--<ListView-->
        <!--android:id="@+id/lv_group"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"/>-->

</LinearLayout>